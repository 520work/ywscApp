/* pages/taocanboard/taocanboard.wxss */
@import "../templete/model/model.wxss";
page {
	width: 750rpx;
	height: 100%;
}

.tcb-container {
	width: 750rpx;
	height: 100%;
	position: relative;
}

.process,
.xieyi,
.address_con {
	padding-left: 30rpx;
}

/* 左侧进度条 */
.process {
	position: relative;
	padding-top: 50rpx;
}

.process_top .circle {
	display: inline-block;
	width: 22rpx;
	height: 22rpx;
	border-radius: 50%;
	background-color: #7661D1;
	box-shadow: 0rpx 0rpx 8rpx 0rpx
}

.process .line {
	height: 100%;
	background-color: ;
	position: absolute;
	left: 40rpx;
	padding: 50rpx;
	margin-top: 20rpx;
	margin-bottom: 50rpx;
	border-left: 1rpx solid #7661D1;
	box-sizing: border-box;
}

/* 套餐标题 */
.process_top .title {
	font-size: 36rpx;
	color: #7661D1;
	font-weight: bold;
	padding-left: 30rpx;
}

/* 已选号码 */
.telwrap.row {
	align-items: center;
}

.telwrap {
	padding-left: 50rpx;
	padding-right: 50rpx;
	margin: 16rpx 0 60rpx;

}

.telwrap text {
	display: inline-block;
	font-size: 32rpx;
	color: #666;
}

.telwrap .left {
	flex: 2;
}

.telwrap .middle,
.telwrap .right {
	flex: 1;
	align-items: center;
}

.telwrap .middle {
	text-align: left;
}

.telwrap .right {
	text-align: right;
}

.telwrap .np {
	color: #7661D1;
}

/* 按钮样式 */
.btnWrap {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	padding-top: 30rpx;
	margin-left: 55rpx;
}

.btnWrap .btn_group {
	width: 50%;
	margin-bottom: 30rpx;
}
.btnWrap .btn_group1 {
	width: 92%;
	margin-bottom: 30rpx;
}

.btnWrap .btn_group view {
	width: 288rpx;
	height: 128rpx;
	border-radius: 32rpx;
	display: inline-block;
	text-align: center;
	padding: 14rpx;
	box-sizing: border-box;
}
.btnWrap .btn_group1 view{
	width: 100%;
}

.btnWrap .btn_group text {
	display: block;
}

.btnWrap .default {
	border: 1rpx solid #979797;
	overflow: hidden;
}

.btnWrap .default text {
	color: #979797;
}

.btnWrap .active {
	background-color: #7661D1;
	box-shadow: 6rpx 6rpx 42rpx -18rpx #2C4794;
	overflow: hidden;
}

.btnWrap .active text {
	color: #fff;
}

/* 资费说明和订单详情 */
.textcon {
	padding: 30rpx 50rpx;
}

.order_con {
	padding: 30rpx 50rpx 0rpx;
}

.textlists {
	display: flex;
	flex-direction: row;
}

.textlists text {
	flex: 1;
	font-size: 28rpx;
	color: #666;
}

.textlists .left {
	text-align: left;
}

.textlists .right {
	text-align: right;
}

.name {
	font-size: 36rpx;
}

.taocanprice {
	font-size: 28rpx;
}

.taocan .lineH50 {
	line-height: 50rpx;
}

.taocan .lineH100 {
	line-height: 100rpx;
}

.zengzhi text {
	font-size: 28rpx;
	line-height: 50rpx;
}

.ychf text {
	line-height: 100rpx;
}

.toChoose {
	font-size: 28rpx;
	color: #999;
	margin-left: 289rpx;
}

.icon-arrow:after {
	font-size: 24rpx;
	color: #7661D1;
	font-weight: bold;
}

.address_con {
	margin-top: 30rpx;
}

.addressbody {
	padding: 10rpx 50rpx 60rpx;
}

.addressbody text {
	display: inline-block;
	font-size: 24rpx;
	color: #999;
	overflow: hidden;
	text-overflow: ellipsis;
	white-space: nowrap;
	width: 100%;
}

.xieyi label {
	padding: 10rpx;
}

.bottom_box .buycardfont2 .xieyitext {
	color: #7661D1;
}

.xieyishuoming {
	margin-left: 58rpx;
}

.pay {
	width: 100%;
	height: 96rpx;
	font-size: 36rpx;
	color: #fff;
	font-weight: 500;
	text-align: center;
	line-height: 96rpx;
	background-color: #917ddc;
	padding-left: -30rpx;
	margin-top: 60rpx;
}

.coupon-box {
	width: 100%;
	height: 100%;
	position: fixed;
	top: 0;
	left: 750rpx;
	z-index: 100;
}

.mask1 {
	width: 100%;
	height: 100%;
	background-color: #000;
	opacity: 0.6;
	z-index: 200;
}

.mask1 text {
	display: block;
	font-size: 32rpx;
	color: #fff;
	width: 35rpx;
	text-align: center;
	margin-left: 20rpx;
	padding-top: 50%;
}

.coupon-con {
	width: 90%;
	height: 100%;
	background-color: #ededed;
	position: absolute;
	top: 0;
	right: 0;
	z-index: 300;
}

.coupon-con .nouse {
	display: block;
	width: 634rpx;
	height: 76rpx;
	border-radius: 20rpx;
	background-color: #fff;
	text-align: center;
	line-height: 76rpx;
	font-size: 24rpx;
	margin: 24rpx auto;
}

.nocoupon {
	text-align: center;
}

.nocoupon text {
	font-size: 28rpx;
	padding-top: 50rpx;
}
.couponitems view{
	width: 634rpx;
	height: 160rpx;
	margin: 0 auto;
	position: relative;
}
.couponitems view image{
	width: 100%;
	height: 100%;
}
.couponitems view .row{
	position: absolute;
	top: 0;
	left: 60rpx;
	box-sizing: border-box;
	padding-top: 14rpx;
}
.couponitems view .row .discount{
	flex: 1;
}
.couponitems view .row .discount text{
	font-size: 32rpx;
	color: #ffaf7e;
}
.couponitems view .row .couponinfo{
	flex: 5;
}
.couponitems view .row .couponinfo text{
	font-size: 24rpx;
	color: #666;
}
