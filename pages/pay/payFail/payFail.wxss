/* pages/pay/payAboveSuccess/pas.wxss */
.top-img {
	padding-bottom: 40rpx;
}
.top-img text{
	color: #FD6E58;
}
.telwrap.row {
	align-items: center;
	margin-top: 10rpx;
}

.telwrap text {
	display: inline-block;
	font-size: 32rpx;
	color: #666;
	font-weight: normal;
}

.telwrap .left {
	flex: 2;
}

.telwrap .middle,
.telwrap .right {
	flex: 1;
	align-items: center;
}

.telwrap .middle {
	text-align: left;
}

.telwrap .right {
	text-align: right;
}

.telwrap .np {
	color: #7661D1;
}

.btn-wrap {
	width: 100%;
	height: 96rpx;
	font-size: 36rpx;
	color: #fff;
	font-weight: 500;
	text-align: center;
	line-height: 96rpx;
	display: flex;
	flex-direction: row;
	position: absolute;
	bottom: 0;
}
.gotoindex, .continuebuy{
	flex: 1;
}
.gotoindex{
	background: #917ddc;
}
.continuebuy{
	background: #7661D1;
}
.address image{
	top:-30rpx
}
