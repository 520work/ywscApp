/* pages/identifyId/identifyId.wxss */
@import "../templete/model/model.wxss";
page{
	width: 100%;
	height: 100%;
}
.id-container{
	width: 100%;
	background-color: #f0f2f5;
	position: relative;
}
.titlefont{
	height: 104rpx;
	text-align: center;
	line-height: 104rpx;
}
.uploadarea{
	width: 710rpx;
	/* height: 276rpx; */
	margin: 0 auto;
	background-color: #fff;
	border-radius:32rpx;
	box-shadow:0rpx 12rpx 42rpx -18rpx rgba(44,71,148,1);
	margin-bottom: 16rpx;
}
.infoarea{
	width: 710rpx;
	margin: 0 auto;
	background-color: #fff;
	border-radius:32rpx;
	box-shadow:0rpx 12rpx 42rpx -18rpx rgba(44,71,148,1);
	margin-bottom: 126rpx;
}
.uploadarea .left{
	width: 560rpx;
	text-align: center;
}
.uploadarea .left image{
	width: 352rpx;
	height: 208rpx;
	margin: 0 auto;
	border: 1px dashed #888888;
	margin-top: 12rpx;
}
.uploadarea .left .head{
	width: 160rpx;
	height: 190rpx;
}
.uploadarea .left text{
	font-size: 28rpx;
	color: #ACACAC;
}
.uploadarea .right{
	display: flex;
	align-items: center;
	margin-left: 6rpx;
}
.uploadarea .right text{
	font-size: 72rpx;
	color: #7661D1;
}
.pay{
	position: fixed;
	bottom: 0;
	background-color: #7661D1;
}
.infoarea .tips{
	padding: 10rpx 26rpx 20rpx;
	border-radius: 32rpx;
	border-bottom: 1px solid #ededed;
}
.infoarea .tips text{
	display: block;
	font-size: 24rpx;
	color: red;
}
.info{
	padding: 10rpx 26rpx 20rpx;
}
.info text{
	display: inline-block;
	font-size: 24rpx;
	color: #000;
	height: 60rpx;
	line-height: 60rpx;
}
.info .name{
	border-bottom: 1px solid #ededed;
}
.info .title{
	width: 100rpx;
}
