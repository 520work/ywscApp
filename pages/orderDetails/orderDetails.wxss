/*订单详情页面 */
page{
	width: 100%;
	height: 100%;
	background: #ededed;
}
text{
	color: dimgray;
}
.between{
	justify-content: space-between;
}
.orderadd, .express, .information{
	background: #fff;
	margin-bottom: 30rpx;
	padding: 35rpx 30rpx;
}

.orderadd text, .express text{
	font-size: 28rpx;
}

.orderadd .left, .express .left {
	width: 12%;
	display: flex;
	justify-content: center;
	align-items: center;
}

.orderadd .left image {
	width: 36rpx;
	height: 36rpx;
}
.express .left image{
	width: 43rpx;
	height: 43rpx;
}

.orderadd .right, .express .right {
	width: 87%;
}
.express text{
	display: block;
}
.express .exptips{
	font-size: 24rpx;
	color: red;
}
.buyinfo{
	background: #fff;
	margin-bottom: 30rpx;
}
.buyinfo .cardinfo{
	padding:35rpx 30rpx;
}
.buyinfo .cardinfo image{
	width: 102rpx;
	height: 102rpx;
	margin-right: 30rpx;
}
.buyinfo .cardinfo text{
	font-size: 24rpx;
}
.buyinfo .cardinfo .row {
	width: 80%;
	align-items: center;
}
.buyinfo .cardinfo, .iccid-wrap, .pricedetails{
	border-bottom: 1px solid #b3b3b3;
}
.iccidlists{
	width: 100%;
	/* height: 424rpx; */
	margin: 0 auto;
	padding: 30rpx 0 0 0;
	overflow: hidden;
	box-sizing: border-box;
}
.iccidlists .iccidlist{
	display: flex;
	width: 80%;
	margin: 0 auto 35rpx;
	align-items: center;
}
.iccid-wrap text{
	font-size: 26rpx;
}
.iccid-wrap .jihuo{
	color: #917DDC;
	border: 1px solid #917DDC;
	padding: 4rpx 10rpx;
}
.moreorless{
	text-align: center;
	padding: 0  0 35rpx 0;
}
.pricedetails, .actualmoney{
	padding: 35rpx 30rpx;
}
.pricedetails text{
	font-size: 24rpx;
}
.actualmoney text, .information text{
	font-size: 28rpx;
}
.black{
	color: #000;
}