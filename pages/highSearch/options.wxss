/* 高级搜索 */
.filter-box {
	width: 100%;
	height: 100%;
	background-color: #fff;
}

.filter-box .options,
.filter-box .filterhead {
	box-sizing: border-box;
	padding: 28rpx 40rpx 0rpx;
}

.filter-box .filterhead {
	margin-bottom: 20rpx;
}

.filter-title {
	font-size: 32rpx;
	color: #403f3f;
	margin-bottom: 20rpx;
}
.filter-search, .filter-search .entry, .filter-search input{
	width: 100%;
}

.font12 {
	font-size: 24rpx;
	color: #7661D1;
	height: 24rpx;
	vertical-align: middle;
	line-height: 69rpx;
}

.font12:after {
	margin-left: 10rpx;
	margin-right: 20rpx;
}

.filter-box .options {
	overflow-y: scroll;
	padding-bottom: 120rpx;
}

.filter-box .options .option-family {
	margin-bottom: 20rpx;
}

.filter-box .options .option-family text {
	font-size: 28rpx;
	color: #403f3f;
}

.filter-box .options .option-name {
	display: flex;
	flex-wrap: wrap;
	margin-bottom: 28rpx;
}

.filter-box .options .option-name text {
	width: 28%;
	height: 60rpx;
	font-size: 24rpx;
	color: #484848;
	margin-right: 4%;
	text-align: center;
	line-height: 60rpx;
	border: 1rpx solid #dddddd;
	margin-bottom: 20rpx;
	border-radius: 10rpx;
}

.filter-box .options .option-name .selected {
	background: #917eda;
    color: #ffffff;
}

.filter-box .options .option-name .change-city {
	border: 0;
	color: #7661D1;
}

.filter-box .options .option-name .change-city:after {
	padding-left: 10rpx;
}

.filter-box .filterbtn {
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	display: flex;
	flex-direction: row;
	text-align: center;
	-moz-box-shadow: 0rpx -1rpx 2rpx #efefef;
	-webkit-box-shadow: 0rpx -1rpx 2rpx #efefef;
	box-shadow: 0rpx -1rpx 2rpx #efefef;
}

.filter-box .filterbtn text {
	display: inline-block;
	height: 100%;
	flex: 1;
	line-height: 100rpx;
	background-color: #fff;
}

.filter-box .filterbtn .active {
	background-color: #7661D1;
	color: #fff;
}
.entry input{
	padding-left: 10rpx;
}
